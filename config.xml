<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:android   = "http://schemas.android.com/apk/res/android"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "rambo"
	version 	= "1.0">

	<name>taco taco boondle</name>

	<description>
        Try out a minimum app!
	</description>

	<author href="http://adobe.com" email="rudd@adobe.com">
		Brett Rudd
	</author>

  	<!--<plugin name="cordova-plugin-inappbrowser" source="npm" version="1.0.1" />
	<plugin name="cordova-plugin-geolocation" spec=">=1" />
	<plugin spec="https://github.com/apache/cordova-plugin-camera.git" />
	<plugin name="cordova-plugin-device" spec="1.0.0" source="pgb" />
  	<plugin spec="https://github.com/apache/cordova-plugin-vibration.git#1.2.0" />-->
  	
<plugin name="cordova-plugin-whitelist" spec="1.0.0" source="npm" />
<plugin name="phonegap-plugin-barcodescanner"  spec="4.1.0" source="npm" />
<plugin name="cordova-plugin-facebook4" spec="1.6.3" source="npm">
  <param name="APP_ID" value="34xxxxxxxxxxxxxxxx" />
  <param name="APP_NAME" value="Checkit" />
  </plugin>
 
  <!-- StatusBar -->
  <plugin name="cordova-plugin-statusbar" spec="2.1.1" source="npm" />
  	
  <platform name="ios" >
  	<preference name="phonegap-version" value="3.9.2" />
  </platform>
  <gap:platform name="wp8" />
  <platform name="android" />
  <preference name="phonegap-version" value="cli-5.2.0" />
  <gap:splash src="splash-main.png" />
  <icon src="icon-main.png" />
  <preference name="android-build-tool" value="gradle" />
  <preference name="android-minSdkVersion" value="15" />
  
  <!--preference name="phonegap-version" value="cli-6.0.0" /--> <!-- Latest version of phonegap cli -->
<preference name="android-minSdkVersion" value="15" /> <!-- Android only to set a minimun version of Android SO compatible with app -->
<preference name="android-build-tool" value="gradle" /> <!-- Android only to build apk using Gradle instead Ant -->
<preference name="orientation" value="portrait" /> <!-- All platform to block screen rotation -->

<!-- Per evitare che su iPhone si trascini tutto lo schermo -->
<platform name="ios">
  <preference name="DisallowOverscroll" value="true" />
  <preference name="target-device" value="handset" />
</platform>
 
<!--############################# PLUGIN ###############################-->
<plugin name="cordova-plugin-whitelist" spec="1.0.0" source="npm" />
<allow-navigation href="*" />
 
  <plugin name="cordova-plugin-filepath"  spec="1.0.2" source="npm" /> <!-- Android only to resolve file path from filesystem -->
  <plugin name="cordova-plugin-media"  spec="2.2.0" source="npm" />
  <plugin name="cordova-plugin-file"  spec="4.1.1" source="npm" />
  <plugin name="cordova-plugin-file-transfer"  spec="1.5.0" source="npm" />
  <plugin name="cordova-plugin-inappbrowser"  spec="1.3.0" source="npm" />
  <plugin name="cordova-plugin-device"  spec="1.1.1" source="npm" />
  <plugin name="cordova-plugin-network-information"  spec="1.2.0" source="npm" />
<plugin name="cordova-plugin-camera"  spec="2.1.0" source="npm" />
  <plugin name="cordova-plugin-geolocation"  spec="2.1.0" source="npm" />
  <plugin name="cordova-plugin-splashscreen"  spec="3.2.0" source="npm" />
  <plugin name="phonegap-plugin-push"  spec="1.5.3" source="npm" />
  <plugin name="cordova-plugin-google-analytics"  spec="0.8.1" source="npm" />
  <plugin name="cordova-plugin-x-socialsharing"  spec="5.0.10" source="npm" /> <!-- Facebook direct share is available only for iOS, Android-->
  <!--plugin name="org.cloudsky.cordovaplugins.zbar" spec="tjwoon/csZBar" source="git" /--> <!-- More customizable QrCode scanner -->
<plugin name="phonegap-plugin-barcodescanner"  spec="4.1.0" source="npm" /> <!-- Official Phonegap plugin barcodescanner -->
  
  <!-- Facebook login -->
  <plugin name="cordova-plugin-facebook4" spec="1.6.3" source="npm">
  <param name="APP_ID" value="34xxxxxxxxxxxxxxxx" />
  <param name="APP_NAME" value="Checkit" />
  </plugin>
 
  <!-- StatusBar -->
  <plugin name="cordova-plugin-statusbar" spec="2.1.1" source="npm" />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarBackgroundColor" value="#085d34" />
  <!-- StatusBar Authorization -->
  <feature name="StatusBar">
  <param name="ios-package" value="CDVStatusBar" onload="true" />
  </feature>
 
<!-- Geolocation Authorization -->
<feature name="Geolocation">
  <param name="ios-package" value="CDVLocation" />
  <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
</feature>
  
</widget>
